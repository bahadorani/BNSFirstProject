@model BNS.Models.ProjectType
@{
    var title = "ایجاد نوع پروژه جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Upsert">
    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        @if (Model.ID != 0)
        {
            <input type="hidden" asp-for="ID" />
            title = "ویرایش نوع پروژه";
        }
        <div class="col-12">
            <h2 class="text-primary">@title</h2>
            <br />
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Caption"> عنوان نوع پروژه:</label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="Caption" />
                    <span asp-validation-for="Caption" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.ID != 0)
                    {
                        // edit and back to list
                        <partial name="_EditAndBackToList" model="Model.ID" />
                    }
                    else
                    {
                        //insert and back to list
                        <partial name="_CreateAndBackToList" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

