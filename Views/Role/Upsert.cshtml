@model BNS.Models.Role

@{
    var title = "ایجاد نقش جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Upsert">
    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        @if (Model.ID != 0)
        {
            <input type="hidden" asp-for="ID" />
            title = "ویرایش نقش";
        }
         <div class="col-12">
            <h2 class="text-primary">@title</h2>
            <br />
         </div >
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"> عنوان نقش:</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control is-invalid" asp-for="Name" id="validation01" aria-describedby="validation01Feedback" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                </div>
               
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Model.ID != 0)
                        {
                            // edit and back to list
                            <partial name="_EditAndBackToList" model="Model.ID" />
                        }
                        else
                        {
                            //insert and back to list
                            <partial name="_CreateAndBackToList" />
                        }
                    </div>
                </div>
            </div>
        </div>
</form>

